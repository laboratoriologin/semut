<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+item_list_noticia/borda"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small"
    android:background="@drawable/borda_item_list"
    android:padding="@dimen/padding_medium"
    tools:context=".adapter.ListItemAdapterNoticia" >

    <TextView
        android:id="@+item_list_alerta/data_publicacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transalvador"
        android:gravity="center_vertical"
        android:paddingLeft="2dp"
        android:singleLine="true"
        android:text="xxxxxxxxxxxxxxxxxxxx"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+item_list_alerta/text_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+item_list_alerta/data_publicacao"
        android:layout_margin="@dimen/padding_medium"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+item_list_alerta/categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="xxxxxxxxxxxxxxxxxxxx"
            android:textColor="@color/transalvador" />

        <ImageView
            android:id="@+item_list_alerta/imgAlerta"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:layout_below="@+item_list_alerta/categoria"
            android:contentDescription="@string/image"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"/>

        <!-- android:textStyle="bold" /> -->

        <TextView
            android:id="@+item_list_alerta/txtAlerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+item_list_alerta/imgAlerta"
            android:layout_below="@+item_list_alerta/categoria"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="xxxxxxxxxxxxxxxxxxxx"
            android:textColor="@color/cinza_fonte" />

    </RelativeLayout>

</RelativeLayout>